@model Category
<div class="container" style="max-width: 400px; margin: 0 auto; border: 4px solid black; border-radius: 10px; padding: 10px; box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);">
    <form asp-controller="Category" asp-action="CreateCategory" method="post">
        <div style="margin-bottom: 10px;">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" style="width: 100%; padding: 5px;">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" style="width: 100%; padding: 5px;">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>